{
  "extends": [
      "wesbos/typescript",
      "prettier",
      "next/core-web-vitals",
      "plugin:jest/recommended"
  ],
  "plugins": [
      "jest"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
      ],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    },
    {
    "files": "*.mdx",
    "extends": ["plugin:mdx/recommended"],
    "settings": {
        "mdx/code-blocks": true
    }
    }
  ],
  "rules": {
      "quotes": [
          2,
          "single",
          {
              "avoidEscape": true
          }
      ],
      "no-unused-expressions": [
          1,
          {
              "allowTernary": true
          }
      ],
      "arrow-body-style": [
          "error",
          "always"
      ],
      "prettier/prettier": [
          "error",
          {
              "trailingComma": "es5",
              "singleQuote": true,
              "printWidth": 80,
              "endOfLine": "auto"
          }
      ],
      "react/prop-types": 0,
      "jsx-a11y/label-has-associated-control": [
          "error",
          {
              "required": {
                  "some": [
                      "nesting",
                      "id"
                  ]
              }
          }
      ],
      "jsx-a11y/label-has-for": [
          "error",
          {
              "required": {
                  "some": [
                      "nesting",
                      "id"
                  ]
              }
          }
      ],
      "template-curly-spacing": "off",
      "indent": "off",
      "no-console": "error",
      "import/no-extraneous-dependencies": [
          "error",
          {
              "devDependencies": [
                  "**/*.test.ts",
                  "**/*.spec.ts",
                  "**/*.test.tsx",
                  "**/*.spec.tsx",
                  "jest.setup.ts"
              ]
          }
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": ["error"]
  }
}