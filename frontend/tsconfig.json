{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "frontend/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "frontend/additional.d.ts",
    "pages-old/blog/[...slug].old",
    "pages-old/blog.old",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
