---
import HeaderLink from './HeaderLink.astro'
import Socials from './Socials.astro'

const today = new Date()
---

<footer>
  <div class="mx-auto max-w-7xl overflow-hidden px-6 lg:px-8">
    <nav
      class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
      aria-label="Footer"
    >
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/technical-writing">Technical Writing</HeaderLink>
      <HeaderLink href="/links">Links</HeaderLink>
      <HeaderLink href="/contact">Contact Me</HeaderLink>
    </nav>

    <div class="mt-16">
      <Socials />
    </div>

    <p class="mt-10 text-center text-sm/6 text-gray-400">
      &copy; {today.getFullYear()} Coner Murphy. All rights reserved.
    </p>
  </div>
</footer>
